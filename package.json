{
	"name": "automation",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bunx --bun vite dev",
		"build": "bunx --bun vite build",
		"preview": "bunx --bun vite preview",
		"prepare": "bunx --bun svelte-kit sync || echo ''",
		"check": "bunx --bun svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bunx --bun svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bunx --bun prettier --write .",
		"lint": "bunx --bun prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/bun": "^1.2.18",
		"@types/node": "^20",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^0.2.0"
	},
	"dependencies": {
		"@sveltejs/kit": "^2.22.0",
		"@types/js-yaml": "^4.0.9",
		"js-yaml": "^4.1.0",
		"svelte-adapter-bun": "^0.5.2",
		"tslog": "^4.9.3",
		"zod": "^4.0.5"
	}
}
